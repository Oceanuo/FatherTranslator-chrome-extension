{
  "manifest_version": 3,
  "name": "FatherTranslator",
  "version": "1.1.0",
  "description": "A translation extension powered by ChatGPT",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "action": {
    "default_icon": "fathertranslator.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "fathertranslator.png",
    "48": "fathertranslator.png",
    "128": "fathertranslator.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["fathertranslator.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
